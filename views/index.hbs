
<form action="/" method="POST" enctype="multipart/form-data" >

    <h3>Upload Profile Picture</h3>

    <input type="file" name="sampleFile" accept="image/*">

    <input type="submit" class="btn btn-primary" />
</form>


<article class="card">
    {{#each rows}}

        {{#if this.profile_image}}
            <img
                class="card__image"
                src={{this.profile_image}}
                alt="user profile"
            >
        {{else}}
            <img
                class="card__image"
                src="/img/default.jpg"
                alt="user profile"
            >
        {{/if}}

        <h1 class="card__title">{{this.name}}</h1>
        <h3 class="card__job">{{this.job_title}}</h3>
        <p class="card__about">
            {{this.description}}
        </p>
        <button class="btn btn-primary" type="button">View Profile</button>

    {{/each}}
</article>